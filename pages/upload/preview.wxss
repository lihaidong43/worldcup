/* pages/upload/preview.wxss */
page {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
  background-color: #032084;  
  position: absolute;
  top: 0px;
  overflow: hidden;
}
.preview {
  width: 100%;
  height: 100%;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items:center;
}
.movable-area {
  height:100%;
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
}
.cover {
  display:flex; 
  align-items:center;
}
.cover image {
  position: absolute;
}
.mask {
  background-color:#032084;
  opacity:0.5;
  border:1px solid #fff;
  height:315px;
  width:315px;
  /* background: linear-gradient(to left, #032084, #032084) left top no-repeat, 
                linear-gradient(to bottom, #032084, #032084) left top no-repeat, 
                linear-gradient(to left, #032084, #032084) right top no-repeat,
                linear-gradient(to bottom, #032084, #032084) right top no-repeat, 
                linear-gradient(to left, #032084, #032084) left bottom no-repeat,
                linear-gradient(to bottom, #032084, #032084) left bottom no-repeat,
                linear-gradient(to left, #032084, #032084) right bottom no-repeat,
                linear-gradient(to left, #032084, #032084) right bottom no-repeat; */
  background-size: 2px 30px, 30px 2px, 2px 30px, 30px 2px;
  z-index: 10
}
.canvas {
  /* display: none;  */
  position: absolute;
  z-index: 9;
}
 .opt {
  display: flex;
  justify-content: space-between;
  margin: 50rpx 30rpx;
}

.opt text {
  color: #fff;
  font-size: 34rpx;
}